import os
import pandas as pd
import spacy as sp
nlp = sp.load("en_core_web_trf", exclude=["parser"])
def table_from_txt(udir):
    for file in os.listdir(udir):
        if os.path.splitext(file)[1] == '.txt':
            with file as f:
                doc = f.readlines()
                table = nlp(doc)
                for sentence in table.sents:
                    print(sent.text)
                return table
if __name__ == '__main__':
    df = table_from_txt(os.path.join(os.path.dirname(os.getcwd()),'data/unzipped'))
